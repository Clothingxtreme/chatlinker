{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.e2e-spec.ts",
    "test/**/*.ts"
  ]
}
